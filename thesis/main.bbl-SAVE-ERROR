      \strng{namehash}{81c15dc75ffa19534ed906825c712986}
      \strng{fullhash}{81c15dc75ffa19534ed906825c712986}
      \strng{fullhashraw}{81c15dc75ffa19534ed906825c712986}
      \strng{bibnamehash}{81c15dc75ffa19534ed906825c712986}
      \strng{authorbibnamehash}{81c15dc75ffa19534ed906825c712986}
      \strng{authornamehash}{81c15dc75ffa19534ed906825c712986}
