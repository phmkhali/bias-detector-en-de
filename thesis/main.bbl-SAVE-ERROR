      \strng{bibnamehash}{21d986ea0cae8a712743acbf80c964c1}
      \strng{authorbibnamehash}{21d986ea0cae8a712743acbf80c964c1}
      \strng{authornamehash}{21d986ea0cae8a712743acbf80c964c1}
